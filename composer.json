{
    "name": "sawirricardo/midtrans-api",
    "description": "Interact with Midtrans API. Included Snap and its Core API.",
    "keywords": [
        "sawirricardo",
        "midtrans-api"
    ],
    "homepage": "https://github.com/sawirricardo/midtrans-api",
    "license": "MIT",
    "authors": [
        {
            "name": "sawirricardo",
            "email": "sawir.ricardo@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "saloonphp/saloon": "^1.0",
        "spatie/data-transfer-object": "^1.0 | ^2.0 | ^3.7"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Sawirricardo\\Midtrans\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sawirricardo\\Midtrans\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
